pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'blog_api-web'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Franckfetuedirane/blog_api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat """
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    """
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    bat """
                    docker-compose up -d db
                    docker run --network blog_api_default --rm ${DOCKER_IMAGE}:$pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'blog_api-web'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Franckfetuedirane/blog_api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat """
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    """
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    bat """
                    docker-compose up -d
                    docker-compose exec web python manage.py test
                    docker-compose down
                    """
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                script {
                    bat """
                    docker-compose down || exit 0
                    docker-compose up -d
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline terminé avec succès !'
        }
        failure {
            echo 'Pipeline échoué.'
        }
    }
}{DOCKER_TAG} python manage.py test
